<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Card Container -->
    <VBox spacing="15" alignment="CENTER" styleClass="card, elevated-1" maxWidth="450">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Title -->
        <Label text="Create New Account" styleClass="title-2"/>
        <Label text="Fill in the details to register" styleClass="text-caption"/>
        
        <Separator/>

        <!-- Register Form -->
        <VBox spacing="15" alignment="CENTER">
            
            <!-- Username -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Username" styleClass="text-bold"/>
                <TextField fx:id="registerUsernameField" promptText="Choose a username" prefWidth="320"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Password" styleClass="text-bold"/>
                <PasswordField fx:id="registerPasswordField" promptText="Choose a password" prefWidth="320"/>
            </VBox>

            <!-- Name -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="First Name" styleClass="text-bold"/>
                <TextField fx:id="nameField" promptText="Enter your first name" prefWidth="320"/>
            </VBox>

            <!-- Surname -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Last Name" styleClass="text-bold"/>
                <TextField fx:id="surnameField" promptText="Enter your last name" prefWidth="320"/>
            </VBox>

            <!-- Role -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="I want to register as" styleClass="text-bold"/>
                <ComboBox fx:id="roleComboBox" promptText="Select your role"
                         prefWidth="320" maxWidth="Infinity"/>
            </VBox>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <padding>
                    <Insets top="10"/>
                </padding>
                <Button fx:id="submitRegisterButton" text="Register" onAction="#handleRegisterSubmit"
                       styleClass="accent" prefWidth="150" defaultButton="true"/>
                <Button fx:id="cancelRegisterButton" text="Cancel" onAction="#handleCancelRegister"
                       styleClass="flat" prefWidth="150"/>
            </HBox>

            <!-- Message Label -->
            <Label fx:id="registerMessageLabel" styleClass="danger" wrapText="true"
                   maxWidth="320" alignment="CENTER" visible="false"/>
        </VBox>
    </VBox>
</VBox>

