<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Card Container -->
    <VBox spacing="20" alignment="CENTER" styleClass="card, elevated-1" maxWidth="400">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <!-- Title -->
        <Label text="SPORTY" styleClass="title-1"/>

        <Label text="Welcome back! Please login to continue." styleClass="text-caption"/>

        <Separator/>

        <!-- Login Form -->
        <VBox spacing="20" alignment="CENTER">
            
            <!-- Username -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Username" styleClass="text-bold"/>
                <TextField fx:id="usernameField" promptText="Enter your username" prefWidth="300"/>
            </VBox>

            <!-- Password -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Password" styleClass="text-bold"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" prefWidth="300"/>
            </VBox>

            <!-- Buttons -->
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                       styleClass="accent" prefWidth="300" defaultButton="true"/>
                <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister"
                       styleClass="flat" prefWidth="300"/>
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" styleClass="danger" wrapText="true"
                   maxWidth="300" alignment="CENTER" visible="false"/>
        </VBox>
    </VBox>
</VBox>

