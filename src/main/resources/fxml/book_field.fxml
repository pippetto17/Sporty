<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root-container" prefWidth="800" prefHeight="700">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="20" right="30" bottom="15" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸŸï¸ SELECT FIELD" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="backButton" text="â†" onAction="#handleBack"
                       styleClass="secondary-button" prefWidth="50"/>
            </HBox>

            <VBox spacing="8" styleClass="match-info-box">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
                <Label fx:id="matchInfoLabel" text="Match: Football 5 - Milan - 15/01/2026 18:00"
                      styleClass="match-info-text">
                    <font>
                        <Font size="13"/>
                    </font>
                </Label>
            </VBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="sort-container">
                <Label text="Sort by:" styleClass="field-label-bold">
                    <font>
                        <Font name="System Bold" size="12"/>
                    </font>
                </Label>

                <ComboBox fx:id="sortComboBox" promptText="Select sorting"
                         styleClass="custom-combo-box" prefWidth="200"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="refreshButton" text="ðŸ”„ Refresh" onAction="#handleRefresh"
                       styleClass="secondary-button" prefWidth="100"/>
            </HBox>

            <Label fx:id="resultsLabel" text="Loading fields..." styleClass="info-label"/>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="content-scroll">
                <VBox fx:id="fieldsContainer" spacing="12">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" styleClass="footer-container">
            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <Label fx:id="selectedFieldLabel" text="No field selected" styleClass="info-label"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="confirmButton" text="âœ“ Confirm Booking" onAction="#handleConfirm"
                   styleClass="primary-button" prefWidth="180" prefHeight="40" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>

