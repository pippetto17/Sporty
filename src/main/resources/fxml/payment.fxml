<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root-container" prefWidth="600" prefHeight="750">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="20" right="30" bottom="15" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ’³ SECURE PAYMENT" styleClass="title-label">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="â† Back" onAction="#handleBack" styleClass="secondary-button" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <VBox spacing="20" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="30" right="40" bottom="30" left="40"/>
                    </padding>
                    
                    <!-- Summary Card -->
                    <VBox spacing="12" styleClass="card, payment-summary-box">
                        <padding>
                            <Insets top="20" right="25" bottom="20" left="25"/>
                        </padding>
                        
                        <!-- Header: Sport & City -->
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="ðŸ…" styleClass="summary-icon"/>
                                <Label fx:id="sportLabel" text="Sport" styleClass="text-bold, title-4"/>
                            </HBox>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="ðŸ“" styleClass="summary-icon"/>
                                <Label fx:id="cityLabel" text="City" styleClass="text-bold, title-5"/>
                            </HBox>
                        </HBox>
                        
                        <Label fx:id="dateLabel" text="Date @ Time" styleClass="text-muted"/>
                        
                        <!-- Hidden legacy label -->
                        <Label fx:id="matchInfoLabel" visible="false" managed="false"/>
                        
                        <Separator styleClass="payment-separator"/>
                        
                        <!-- Shares Selector -->
                        <HBox spacing="15" alignment="CENTER_LEFT">
                           <Label text="Shares to pay" styleClass="text-bold"/>
                           <ComboBox fx:id="sharesComboBox" prefWidth="100"/>
                        </HBox>
                        
                        <Separator styleClass="payment-separator"/>
                        
                        <!-- Price Summary Line -->
                        <HBox alignment="CENTER_LEFT" spacing="20">
                            <VBox spacing="2">
                                <Label text="Cost/Person" styleClass="price-label-small"/>
                                <Label fx:id="costPerPersonLabel" text="â‚¬ 0.00" styleClass="price-value-small"/>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <VBox spacing="2" alignment="CENTER_RIGHT">
                                <Label text="Total" styleClass="price-label-large"/>
                                <Label fx:id="totalLabel" text="â‚¬ 0.00" styleClass="price-value-large"/>
                            </VBox>
                            
                            <Label fx:id="amountLabel" visible="false" managed="false"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Payment Inputs -->
                    <VBox spacing="20" styleClass="card" style="-fx-padding: 25;">
                        <Label text="Card Details" styleClass="title-4"/>

                        <VBox spacing="8">
                            <Label text="Card Number" styleClass="input-label"/>
                            <TextField fx:id="cardNumberField" promptText="0000 0000 0000 0000" styleClass="payment-input"/>
                        </VBox>
                        
                        <VBox spacing="8">
                            <Label text="Card Holder" styleClass="input-label"/>
                            <TextField fx:id="cardHolderField" promptText="NAME SURNAME" styleClass="payment-input"/>
                        </VBox>
                        
                        <HBox spacing="20">
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="Expiry Date" styleClass="input-label"/>
                                <TextField fx:id="expiryField" promptText="MM/YY" styleClass="payment-input"/>
                            </VBox>
                            <VBox spacing="8" HBox.hgrow="ALWAYS">
                                <Label text="CVV" styleClass="input-label"/>
                                <TextField fx:id="cvvField" promptText="123" styleClass="payment-input"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    
                    <Label fx:id="errorLabel" text="" styleClass="danger"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <Button fx:id="payButton" text="Pay Now" onAction="#handlePay" styleClass="success, large" prefWidth="250"/>
        </HBox>
    </bottom>

</BorderPane>
