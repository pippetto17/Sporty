<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root-container" prefWidth="600" prefHeight="500">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="20" right="30" bottom="15" left="30"/>
            </padding>
            <Label text="âœ… MATCH ORGANIZED" styleClass="title-label" style="-fx-text-fill: green;">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>
            
            <Label text="Match Details" styleClass="section-header"/>
            
            <GridPane hgap="15" vgap="10">
                 <Label text="Sport:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                 <Label fx:id="sportLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                 
                 <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                 <Label fx:id="dateLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                 
                 <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                 <Label fx:id="timeLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                 
                 <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                 <Label fx:id="cityLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                 <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
                 <Label fx:id="statusLabel" text="CONFIRMED" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-text-fill: green;"/>
            </GridPane>
            
            <Separator />
            
            <HBox spacing="15" alignment="CENTER">
                 <Button fx:id="inviteButton" text="âœ‰ï¸ Invite Player" onAction="#handleInvite"
                        styleClass="primary-button" prefWidth="200" prefHeight="40"/>
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="footer-container">
            <padding>
                 <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="ðŸ  Home" onAction="#handleHome" styleClass="secondary-button" />
        </HBox>
    </bottom>

</BorderPane>
